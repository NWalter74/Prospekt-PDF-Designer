                                        <Grid Padding="2" Background="#00ADEF" Width="Auto" BorderThickness="0,0,0,1" BorderBrush="Black" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="220"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock  Grid.Column="0" Text="Email" HorizontalAlignment="Left" TextAlignment="Left"
                                                Margin="0,0,20,0" Width="Auto"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.HeaderTemplate>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:Name="TableDataTemplateMail">
                                        <Grid Height="auto" >
