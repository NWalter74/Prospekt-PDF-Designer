                            <ListView SelectionMode="Multiple" BorderBrush="Black" BorderThickness="1" Margin="910,20,0,0" Background="White" x:Name="lvmailadresses" HorizontalAlignment="Left" ScrollViewer.VerticalScrollMode="Enabled" ScrollViewer.VerticalScrollBarVisibility="Auto"  ScrollViewer.HorizontalScrollMode="Enabled" ScrollViewer.HorizontalScrollBarVisibility="Auto" >
                                <ListView.HeaderTemplate>
